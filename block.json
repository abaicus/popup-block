    "popup",
    "modal"
  ],
  "attributes": {
    "width": {
      "type": "number",
      "default": 400
    },
    "waitTime": {
      "type": "number",
      "default": 1
    },
    "offset": {
      "type": "number",
      "default": 20
    },
    "openBehaviour": {
      "type": "string",
      "default": "load"
    },
    "showCloseButton": {
      "type": "boolean",
      "default": true
    },
    "closeButtonAlignment": {
      "type": "string",
      "default": "right"
